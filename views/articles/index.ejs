<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Blog</title>
</head>
<body>
  <div class="blog-container">
    <h1 class="blog-title">Articles</h1>
    <a href="/articles/new" class="btn btn-new-article">+ New Article</a>

    <% articles.forEach(article => { %>
      <div class="article-card">
        <div class="article-body">
          <h4 class="article-title"><%= article.title %></h4>
          <div class="article-meta">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="article-description"><%= article.description %></div>
          <a href="articles/<%= article.slug %>" class="btn btn-read-more">Read More</a>
          <a href="articles/edit/<%= article.id %>" class="btn btn-edit">Edit</a>
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="form-article">
            <button type="submit" class="btn btn-delete">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
